{
  "manifest_version": 3,
  "name": "Time Value Calculator",
  "version": "1.0",
  "description": "Calculate your time value in the side panel",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "permissions": ["sidePanel", "storage"]
}
